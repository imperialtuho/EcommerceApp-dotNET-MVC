@model Movie
@{
    ViewData["Title"] = "Delete Movies";
}
<div class="row">
    <div class="col-sm-3 mx-auto">
        <form method="post" asp-action="DeleteMovie">
            <input asp-for="Id" hidden/>
            <div class=" border p-3 mt-4">
                <div class="row pb-2">
                    <h2 class="text-warning mx-auto">
                        Delete this Movie?
                    </h2>
                    <hr />
                </div>

                <div class="mb-3">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" disabled class="form-control" />
                </div>
                <div class="mb-3">
                    <label asp-for="Description"></label>
                    <input asp-for="Description" disabled class="form-control" />
                </div>

                <button type="submit" class="btn btn-danger" style="width:150px">Delete</button>

                <a asp-controller="Movies" asp-action="Index" class="btn btn-secondary" style="width:150px">
                    Back to Movies
                </a>

            </div>
        </form>
    </div>
</div>



